{
  "application": {
    "name": "Manufacturing Manual Explorer",
    "industry": "manufacturing",
    "description": "Explore equipment maintenance manuals with MongoDB's vector search and RAG capabilities"
  },
  "branding": {
    "title": "Equipment Technical Manual Explorer",
    "subtitle": "Powered by MongoDB Atlas",
    "primaryColor": "#E65100",
    "secondaryColor": "#BF360C",
    "accentColor": "#00897B",
    "logoPath": "/public/manufacturing-logo.png"
  },
  "document": {
    "types": ["maintenance", "operation", "safety", "parts"],
    "defaultType": "maintenance",
    "path": "/public/documents",
    "defaultDocument": "equipment-manual.pdf"
  },
  "industry": {
    "name": "Manufacturing",
    "icon": "Factory",
    "terminology": {
      "manual": "Equipment Manual",
      "chunk": "Section",
      "document": "Manual",
      "search": "Search Manuals",
      "browse": "Browse Chunks"
    },
    "metadata": {
      "contentTypes": [
        "procedure", 
        "warning", 
        "specification",
        "troubleshooting",
        "preventive_maintenance",
        "reference",
        "installation",
        "calibration"
      ],
      "systems": [
        "mechanical",
        "hydraulic",
        "pneumatic",
        "electrical",
        "control",
        "power",
        "cooling",
        "safety"
      ]
    }
  },
  "features": {
    "search": {
      "methods": ["vector", "text", "hybrid"],
      "defaultMethod": "hybrid"
    },
    "chunks": {
      "displayLimit": 20,
      "infiniteScroll": true
    },
    "pdfViewer": {
      "enabled": true,
      "defaultScale": 1.2
    }
  },
  "database": {
    "collections": {
      "chunks": "manufacturing_manual"
    },
    "indices": {
      "vector": "manufacturing_vector_index",
      "text": "manufacturing_text_search_index"
    }
  }
}