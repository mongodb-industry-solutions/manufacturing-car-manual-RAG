{
  "application": {
    "name": "Car Manual Explorer",
    "industry": "automotive",
    "description": "Explore automotive maintenance manuals with MongoDB's vector search and RAG capabilities"
  },
  "branding": {
    "title": "Technical Car Manual Explorer",
    "subtitle": "Powered by MongoDB Atlas",
    "primaryColor": "#3D89F5",
    "secondaryColor": "#001E2B",
    "accentColor": "#00ED64",
    "logoPath": "/mongo.png"
  },
  "document": {
    "types": ["manual", "maintenance", "troubleshooting", "specifications"],
    "defaultType": "manual",
    "path": "/public",
    "defaultDocument": "car-manual.pdf"
  },
  "industry": {
    "name": "Automotive",
    "icon": "CarAlt",
    "terminology": {
      "manual": "Car Manual",
      "chunk": "Section",
      "document": "Manual",
      "search": "Search Manuals",
      "browse": "Browse Chunks"
    },
    "metadata": {
      "contentTypes": [
        "procedure", 
        "warning", 
        "specification",
        "troubleshooting",
        "maintenance",
        "reference",
        "diagnostics"
      ],
      "systems": [
        "engine",
        "transmission",
        "brakes",
        "electrical",
        "suspension",
        "steering",
        "fuel",
        "cooling",
        "interior",
        "safety"
      ]
    }
  },
  "features": {
    "search": {
      "methods": ["vector", "text", "hybrid"],
      "defaultMethod": "hybrid"
    },
    "chunks": {
      "displayLimit": 20,
      "infiniteScroll": true
    },
    "pdfViewer": {
      "enabled": true,
      "defaultScale": 1.2
    }
  },
  "database": {
    "collections": {
      "chunks": "automotive_manual"
    },
    "indices": {
      "vector": "automotive_vector_index",
      "text": "automotive_text_search_index"
    }
  }
}